<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
        <t t-extend="KanbanView.buttons">
            <t t-jquery="button" t-operation="after">
                <t t-if="widget and widget.modelName and widget.modelName == 'res.partner'">
                    
                        <!-- <t t-esc="widget.record"/> -->


                        <div class="btn btn-primary oe_button oe_highlight o_button_lap">
                          <button class="btn btn-secondary dropdown-toggle o_filters_menu_button" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            College
                          </button>


                          <div class="dropdown-menu data_filter_data" aria-labelledby="dropdownMenuButton">

                            <t t-foreach="widget.record" t-as="reccd">
                            <!-- <t  t-esc="reccd.college_id"/> -->
                            

                             <div class="form-check ml-2" id="form_click_data" value="" t-att-data-id="reccd.college_id">
                            <input type="checkbox" class="form-check-input" value="" t-att-id="reccd.college_id"/>
                            <label class="form-check-label" for="exampleCheck1"><t t-esc="reccd.college_name"/></label>
                          </div>

                        </t>
                          </div>
                        </div>


                        <div class="btn btn-primary oe_button oe_highlight o_button_lap">
                          <button class="btn btn-secondary dropdown-toggle o_filters_menu_button_student_type" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Student Type
                          </button>


                          <div class="dropdown-menu data_filter_data_student_type" aria-labelledby="dropdownMenuButton">

                            <t t-foreach="widget.record_student_type" t-as="reccd_student_type">
                            <!-- <t  t-esc="reccd.college_id"/> -->
                            

                             <div class="form-check ml-2" id="form_click_data_student_type" value="" t-att-data-id="reccd_student_type.student_id">
                            <input type="checkbox" class="form-check-input" value="" t-att-id="reccd_student_type.student_id"/>
                            <label class="form-check-label" for="exampleCheck1"><t t-esc="reccd_student_type.student_name"/></label>
                          </div>

                        </t>
                          </div>
                        </div>



                        <div class="btn btn-primary oe_button oe_highlight o_button_lap">
                          <button class="btn btn-secondary dropdown-toggle o_filters_menu_button_department" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Department
                          </button>


                          <div class="dropdown-menu data_filter_data_department" aria-labelledby="dropdownMenuButton">

                            <t t-foreach="widget.record_department" t-as="reccd_department">
                            <!-- <t  t-esc="reccd.college_id"/> -->
                            

                             <div class="form-check ml-2" id="form_click_data_department" value="" t-att-data-id="reccd_department.department_id">
                            <input type="checkbox" class="form-check-input" value="" t-att-id="reccd_department.department_id"/>
                            <label class="form-check-label" for="exampleCheck1"><t t-esc="reccd_department.department_name"/></label>
                          </div>

                        </t>
                          </div>
                        </div>

                        <div class="btn btn-primary oe_button oe_highlight o_button_lap">
                          <button class="btn btn-secondary dropdown-toggle o_filters_menu_button_year" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Year
                          </button>


                          <div class="dropdown-menu data_filter_data_year" value="" aria-labelledby="dropdownMenuButton">

                            <t t-foreach="widget.record_year" t-as="reccd_year">
                            <!-- <t  t-esc="reccd.college_id"/> -->
                            

                             <div class="form-check ml-2" id="form_click_data_year" value="" t-att-data-id="reccd_year.year_id">
                            <input type="checkbox" class="form-check-input" value="" t-att-id="reccd_year.year_id"/>
                            <label class="form-check-label" for="exampleCheck1"><t t-esc="reccd_year.year_name"/></label>
                          </div>

                        </t>
                          </div>
                        </div>

                        <!-- <button
                        class="btn btn-primary oe_button oe_highlight o_button_lap"
                        type="button">Department</button>
                         --> 


                </t>
            </t>
        </t>
    </templates>

