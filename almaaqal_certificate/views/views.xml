<record model="ir.ui.view" id="almaaqal_certificate_tree">
          <field name="name">Certificate </field>
          <field name="model">almaaqal.certificate</field>
          <field name="arch" type="xml">
            <tree>
                <!-- Status -->       

                <field name="number"/>
                <field name="date"/>
                <field name="type_d"/>
                <field name="name_in_arabic"/>

                <field name="grade_year" widget="many2many_tags"/>

            </tree>
          </field>
        </record>

        <record model="ir.ui.view" id="view_any_name_form_almaaqal_certificate_t">
        <field name="name">Cartificate</field>
        <field name="model">almaaqal.certificate</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Certificate">
                <header>
                    <field name="Status" widget="statusbar" statusbar_visible="draft,posted"/>
                </header>
                <sheet>                         
                    <group> 
                        <group>
                            <field name="number"/>
                            <field name="date"/>
                            <field name="type_d"/>
                            <field name="name_in_arabic"/>
                            <field name="name_in_english"/>
                        </group>
                        <group>
                            <field name="college"/>
                            <field name="department"/>
                            <field name="grade"/>
                            <field name="graduation_sequence"/>
                            <field name="year_name_graduation_year"/>
                        </group>
                    </group>

                    <notebook colspan="4">
                        <page string="Grade">
                            <group>
                                <field name="grade_year" nolabel="1">
                                <tree string="Year">
                                    <field name="college_in_english" />
                                    <field name="college_in_arabic"/>

                                    <field name="department_in_english"/>
                                    <field name="department_in_arabic"/>
                                    <field name="year_of_graduation"/>

                                    <field name="notes_in_arabic"/>
                                    <field name="notes_in_english"/>
                                    <field name="subject" widget="many2many_tags"/>
                                    
                                </tree>
                                <form string="Year">
                                    <group>
                                        <group>
                                        <field name="college_in_english" />
                                        <field name="college_in_arabic"/>
                                        <field name="department_in_english"/>
                                        <field name="department_in_arabic"/>
                                        </group>
                                        <group>
                                        <field name="year_of_graduation"/>
                                        <field name="notes_in_arabic"/>
                                        <field name="notes_in_english"/>
                                        </group>
                                    </group>
                                    <notebook colspan="4">
                                        <page string="Subject">

                                        <field name="subject" nolabel="1">
                                            <tree string="Subject">
                                                <field name="subject_arabic"/>
                                                <field name="subject_english"/>
                                                <field name="subject_units"/>
                                                <field name="subject_grade"/>
                                                
                                            </tree>
                                            <form string="Subject">
                                                <group col="4">
                                                    <field name="subject_arabic"/>
                                                    <field name="subject_english"/>
                                                    <field name="subject_units"/>
                                                    <field name="subject_grade"/>
                                                </group>
                                            </form>
                                        </field>
                                    </page>
                                </notebook>
                                </form>
                            </field>
                        </group>
                    </page>
                    <page string="Notes">
                        <group>
                            <field name="notes"/>
                        </group>
                    </page>
                </notebook>
                </sheet>
            </form>
        </field>
    </record>


