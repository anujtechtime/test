<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_report_balance_view_new_page_3" model="ir.ui.view">
        <field name="name">Trial Balance New</field>
        <field name="model">account.balance.report.new.page_3</field>
        <field name="inherit_id" ref="account.account_common_report_view"/>
        <field name="arch" type="xml">
            <data>
            <!-- <field name="journal_ids" position="replace"/> -->
                <xpath expr="//field[@name='target_move']" position="after">
                    <field name="display_account" widget="radio"/>
                    <newline/>
                </xpath>
            </data>
        </field>
    </record>

    <record id="action_account_balance_menu_new_page_3" model="ir.actions.act_window">
        <field name="name">Trial Balance new</field>
        <field name="res_model">account.balance.report.new.page_3</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_report_balance_view_new_page_3"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_account" />
    </record>

    <menuitem id="menu_Balance_report_new_page3"
              name="Trial Balance Page 3st"
              sequence="7"
              action="action_account_balance_menu_new_page_3"
              parent="base_accounting_kit.account_reports_audit"/>

</odoo>
