<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="fx_theme_layout" inherit_id="web.webclient_bootstrap">
        <!-- replace the body class name -->
        <xpath expr="//t[@t-set='body_classname']" position="replace">
            <t t-set="body_classname" t-value="'o_web_client'"/>
        </xpath>

        <xpath expr="//t[@t-set='head_web']" position="before">
            <style id="fx_theme_style_id"/>
        </xpath>

    </template>

</odoo>